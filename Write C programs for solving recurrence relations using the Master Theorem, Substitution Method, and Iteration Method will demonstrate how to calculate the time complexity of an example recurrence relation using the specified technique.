Master Theorem Method
#include <stdio.h>
int masterTheorem(int a, int b, int k) {
    if (k == 0) {
        return 1;
    } else {
        return a * masterTheorem(a, b, k - 1) + b;
    }
}
int main() {
    int a = 2, b = 3, k = 3;
    printf("Result using Master Theorem: %d\n", masterTheorem(a, b, k));
    return 0;
}
Substitution Method
#include <stdio.h>
int substitutionMethod(int n) {
    if (n == 0) {
        return 1;
    } else {
        return 2 * substitutionMethod(n - 1) + 3;
    }
}
int main() {
    int n = 3;
    printf("Result using Substitution Method: %d\n", substitutionMethod(n));
    return 0;
}
Iteration Method
#include <stdio.h>
int iterationMethod(int n) {
    int result = 1;
    for (int i = 0; i < n; i++) {
        result = 2 * result + 3;
    }
    return result;
}
int main() {
    int n = 3;
    printf("Result using Iteration Method: %d\n", iterationMethod(n));
    return 0;
}
